package chap03;

public class OpExam {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int x = 10;

		// 더하기를 1한다는것
		x++;
		System.out.println("x: " + x);
		++x;
		System.out.println("x: " + x);

		x = 10;
		// 이렇게 줄여쓸수있다
		x = x + 1;
		x += 3;
		x++; // 위와 같은 코드
				// 단, 1을 증가할때만 다 같은 거지만 더 편리한게 x++이거다 단 증가1할때만

		int y = 10;
		y--;
		--y;
		System.out.println("y: " + y);

		x = 10;
		int z = ++x;
		System.out.println("z: " + z);

		x = 10;
		z = x++;
		System.out.println("z: " + z);
		System.out.println("x: " + x);

		x = 10;
		System.out.println("x++ :" + ++x);

		x = 10;
		System.out.println("x++ :" + x++);

		x = 1;
		// 1 + 3
		z = x++ + ++x;
		System.out.println("z :" + z);
		System.out.println("x: " + x);

		x = 1;
		z = x++ - --x * x++ - x--;
		System.out.println("x: " + x + ", z: " + z);

		boolean a = false;
		a = !a;
		System.out.println("a: " + a);

		int b = 10;
		// int c = b/0;
		// 나누기 할때 0으로 나누지 않게 해야함
		double d = 7.3;
		double e = d / 0;
		System.out.println(e);

		boolean f = 3 > 4;

		System.out.println(0.1 == 0.1f);
		// 소수점을 비교 할 때는 같은 타입으로 변환해서 비교하자

		// 글씨는 무조건 이퀄스로 비교한다
		String s1 = "s1";
		String s2 = "s2";
		System.out.println(s1.equals(s2));
		System.out.println();

		int c1 = 10;
		int c2 = 4;
		System.out.println("몫 :" + (c1 / c2));
		System.out.println("몫 :" + (c1 / c2));
		System.out.println(10 % 4);

		// 난 돈이 10000원 있습니다
		// 4500원짜리 프라프치노를 최대 몇 잔 살 수 있나요
		// 2. 그리고 남은 돈
		int money = 10000;
		int coffee = 4500;
		int count = money / coffee;
		System.out.println("총 " + count + "잔");
		int change = money % coffee;
		System.out.println("잔액 :" + change);

		// 올리브영에 꿀홍차가 8000원인데
		// 15% 세일중이면 꿀홍차 가격은
		int honey = 8000;
		System.out.println(honey * 0.85);
		
		int score = 87;
		System.out.println("내 점수는 80과 90사이다 참? 거짓?");
		System.out.println(score >= 80);
		System.out.println(score < 80);
		System.out.println(score >= 80 & score <=90);
		
		// 어떤 숫자를 10의 자리 이하 버림
		// a -(a%100)
		int k = 1937;
		k = (k % 100);
		k = k / 100 
		//k /= 100
	    //k = k * 100;
		//k *= 100
		
		// v1 /v2를 소수점 3자리까지 출력하시오		
		double v1 = 1000.0;
		double v2 = 794;
		
		double result1 = (int)(v1*v2)/1000.0;
		System.out.println("result : "+result);
		

	}

}
